<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.etorunski.inclassexamples_17f.SQLExample">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Assignment:" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/assignment_field"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Grade:" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/grade_field"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Comment:" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/comment_field"/>
    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert" android:id="@+id/insert_button"></Button>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_results"></ListView>
</LinearLayout>
